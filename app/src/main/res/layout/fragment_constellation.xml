<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WhiteSmoke"
    >

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                tools:text="白羊座"
                />

            <TextView
                android:id="@+id/datetime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/name"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dimGray"
                tools:text="2019年07月04日"
                />

            <TextView
                android:id="@+id/color"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dimGray"
                tools:text="幸运色：金色"
                />

            <TextView
                android:id="@+id/QFriend"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toRightOf="@id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dimGray"
                tools:text="幸运星座：巨蟹座"
                />

            <TextView
                android:id="@+id/number"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toRightOf="@id/QFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dimGray"
                tools:text="星座数字：7"
                />

            <TextView
                android:id="@+id/all"
                app:layout_constraintTop_toBottomOf="@id/color"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="综合"
                />

            <com.zhouyou.view.segmentedbar.SegmentedBarView
                android:id="@+id/all_barView"
                app:layout_constraintTop_toBottomOf="@id/color"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:sbv_empty_segment_text="No segments"
                app:sbv_segment_gap_width="5dp"
                app:sbv_segment_rule="average"
                app:sbv_segment_text_size="15sp"
                app:sbv_show_description_text="true"
                app:sbv_side_style="rounded"
                app:sbv_side_text_style="twoSided"
                app:sbv_value_sign_height="30dp"
                app:sbv_value_sign_round="8dp"
                app:sbv_value_sign_width="200dp"
                />

            <TextView
                android:id="@+id/health"
                app:layout_constraintTop_toBottomOf="@id/all"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="健康"
                />

            <com.zhouyou.view.segmentedbar.SegmentedBarView
                android:id="@+id/health_barView"
                app:layout_constraintTop_toBottomOf="@id/all"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:sbv_empty_segment_text="No segments"
                app:sbv_segment_gap_width="5dp"
                app:sbv_segment_rule="average"
                app:sbv_segment_text_size="15sp"
                app:sbv_show_description_text="true"
                app:sbv_side_style="rounded"
                app:sbv_side_text_style="twoSided"
                app:sbv_value_sign_height="30dp"
                app:sbv_value_sign_round="8dp"
                app:sbv_value_sign_width="200dp"
                />

            <TextView
                android:id="@+id/love"
                app:layout_constraintTop_toBottomOf="@id/health"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="爱情"
                />

            <com.zhouyou.view.segmentedbar.SegmentedBarView
                android:id="@+id/love_barView"
                app:layout_constraintTop_toBottomOf="@id/health"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:sbv_empty_segment_text="No segments"
                app:sbv_segment_gap_width="5dp"
                app:sbv_segment_rule="average"
                app:sbv_segment_text_size="15sp"
                app:sbv_show_description_text="true"
                app:sbv_side_style="rounded"
                app:sbv_side_text_style="twoSided"
                app:sbv_value_sign_height="30dp"
                app:sbv_value_sign_round="8dp"
                app:sbv_value_sign_width="200dp"
                />

            <TextView
                android:id="@+id/money"
                app:layout_constraintTop_toBottomOf="@id/love"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="财运"
                />

            <com.zhouyou.view.segmentedbar.SegmentedBarView
                android:id="@+id/money_barView"
                app:layout_constraintTop_toBottomOf="@id/love"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:sbv_empty_segment_text="No segments"
                app:sbv_segment_gap_width="5dp"
                app:sbv_segment_rule="average"
                app:sbv_segment_text_size="15sp"
                app:sbv_show_description_text="true"
                app:sbv_side_style="rounded"
                app:sbv_side_text_style="twoSided"
                app:sbv_value_sign_height="30dp"
                app:sbv_value_sign_round="8dp"
                app:sbv_value_sign_width="200dp"
                />

            <TextView
                android:id="@+id/work"
                app:layout_constraintTop_toBottomOf="@id/money"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="工作"
                />

            <com.zhouyou.view.segmentedbar.SegmentedBarView
                android:id="@+id/work_barView"
                app:layout_constraintTop_toBottomOf="@id/money"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:sbv_empty_segment_text="No segments"
                app:sbv_segment_gap_width="5dp"
                app:sbv_segment_rule="average"
                app:sbv_segment_text_size="15sp"
                app:sbv_show_description_text="true"
                app:sbv_side_style="rounded"
                app:sbv_side_text_style="twoSided"
                app:sbv_value_sign_height="30dp"
                app:sbv_value_sign_round="8dp"
                app:sbv_value_sign_width="200dp"
                />

            <TextView
                android:id="@+id/summary"
                app:layout_constraintTop_toBottomOf="@id/work"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="19dp"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/dimGray"
                tools:text="今天或许会进账一笔工作收入，也是依然适合灵修的一天。当然，如果只是想安静的独处，思考一下学习、投资计划也是不错的。"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_select"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:src="@android:drawable/ic_dialog_dialer"
        android:elevation="5dp"
        android:backgroundTint="@color/coral"
        />

</android.support.constraint.ConstraintLayout>